@startuml
title Code Structure Diagram

' Packages represent the layers/modules
package "Database Layer" {
    class DatabaseModel {
        +id: int
        +name: string
        +created_at: datetime
    }
}

package "Schema Layer" {
    class DBSchema {
        +name: string
        +validate()
    }
}

package "Service Layer" {
    class DBService {
        +create_entry(data)
        +get_entry(id)
    }
}

package "API Layer" {
    class APIRoute {
        +post(data)
        +get(id)
    }
}

' Relationships between layers
DatabaseModel <.. DBSchema : uses
DBSchema <.. DBService : uses
DBService <.. APIRoute : uses

' Represent API call flow
actor "Client" as client
client --> APIRoute : API Call (e.g. POST /data)
APIRoute --> DBService : Validated data
DBService --> DatabaseModel : Insert to DB

@enduml
